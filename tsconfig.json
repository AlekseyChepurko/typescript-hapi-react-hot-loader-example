{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "declaration": false,
    "importHelpers": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedParameters": false,
    "removeComments": true,
    "pretty": true,
    "sourceMap": true,
    "noImplicitThis": true,
    "target": "es2015"
  },
  "exclude": [
    "node_modules"
  ]
}
