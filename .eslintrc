{
  "extends": "airbnb",
  "env": {
    "browser": true,
    "node": true
  },
  "parser": "babel-eslint",
  "rules": {
    "indent": [2, 4],
    "classes": [2, "always"],
    "object-curly-spacing": [2, "never"],
    "quotes": [2, "single"],
    "strict": [2, "never"],
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,
    "filenames/match-exported": 2,
    "filenames/no-index": 2
  },
  "plugins": [
    "react",
    "jsx-a11y",
    "import",
    "filenames"
  ]
}
